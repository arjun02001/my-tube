<Window x:Class="MyTube.Download"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Download" MinHeight="250" MinWidth="300" MaxHeight="250" MaxWidth="300">
    <Grid Background="WhiteSmoke">
        <StackPanel Orientation="Vertical">
            <TextBlock Name="TitleTextBlock" Margin="5" Width="250" TextWrapping="Wrap" Foreground="Black"></TextBlock>
            <ProgressBar Name="DownloadProgressBar" Margin="5" Width="250" Height="50" Minimum="0" Maximum="100"></ProgressBar>
            <TextBlock Name="DownloadTextBlock" Text="Downloading.." Margin="5" HorizontalAlignment="Center" FontSize="20" Foreground="Black"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
