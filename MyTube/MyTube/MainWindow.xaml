<Window x:Class="MyTube.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:MyTube.Classes"
        Title="MyTube - Arjun Mukherji 2011" Height="350" Width="525" WindowState="Maximized">
    <Border CornerRadius="8" BorderThickness="1" Background="WhiteSmoke">
        <Grid>
            <DockPanel LastChildFill="True">
                <StackPanel Orientation="Horizontal" Background="Black" DockPanel.Dock="Top">
                    <TextBlock Text="MyTube" Margin="10" FontSize="20" Foreground="WhiteSmoke"></TextBlock>
                    <TextBox Name="SearchTextBox" Margin="10" Width="500" Background="WhiteSmoke" KeyDown="SearchTextBox_KeyDown"></TextBox>
                    <CheckBox Name="PlayModeCheckBox" Margin="10" Content="Play Mode" Click="PlayModeCheckBox_Click" Foreground="WhiteSmoke" FontSize="15" VerticalAlignment="Center"></CheckBox>
                </StackPanel>
                <my:DragCanvas x:Name="ContentDragCanvas" AllowDragging="True" AllowDragOutOfView="False" ></my:DragCanvas>
            </DockPanel>
        </Grid>
    </Border>
</Window>
